@import "styles/constants.pcss";

.component {
  position: relative;
  padding: 30px;
  color: white;
  width: 100%;
  text-decoration: none;
  white-space: pre-line;
}

.title {
  margin: 0;
  font-family: var(--exoticFontFamily);
  font-size: 35px;
}

.description {
  max-width: 500px;
  font-family: var(--mainFontFamily);
  font-size: 19px;
}

.price {
  font-family: var(--mainFontFamily);
  font-size: 30px;
  line-height: 1;
}

.button {
  height: 50px;
  width: 227px;
  font-size: 21px;
}
