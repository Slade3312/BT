.component {
  position: relative;
  width: 100%;
}

.active {
  user-select: none;
  filter: blur(2px);

  &::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    opacity: 0.3;
    z-index: 10;
  }

  * { user-select: none; }
}

.preloader {
  top: 50px;
  z-index: 11;
}
