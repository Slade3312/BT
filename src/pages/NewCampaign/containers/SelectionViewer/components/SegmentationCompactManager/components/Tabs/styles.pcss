@import "styles/constants.pcss";

.linkWrapper {
  display: flex;
  flex-flow: column;
  text-align: center;
  padding-top: 20px;
  position: absolute;
  top: 30px;
  height: 100%;
  width: 100%;
  background: white;
  line-height: 13px;
}

.container {
  max-height: 75px;
  position: relative;
  overflow: hidden;

  &.visible {
    max-height: none;

    & .linkWrapper {
      display: none;
    }
  }
}

.showMore {
  font-size: 13px;
  font-family: var(--mainFontFamily);
}
