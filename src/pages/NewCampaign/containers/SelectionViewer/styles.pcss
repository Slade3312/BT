@import "styles/constants.pcss";

.container {
  width: 380px;
  min-height: 100px;
  border: 4px solid var(--mainColor);
  background: white;
  box-shadow: 0 8px 19px rgba(52, 54, 60, 0.15);
  border-radius: 8px;
  transform: translateX(-100%);
  overflow: hidden;
  transition: 0.3s ease min-height, 0.4s ease height;
  z-index: 1;

  &:hover {
    transition: 0.1s ease min-height, 0.4s ease min-height;
    min-height: 120px;
  }

  &.isNotClickable:hover {
    min-height: 100px;
  }
}
