@import 'styles/constants.pcss';

.radioGroup {
  padding-top: 35px;
  margin: 0 -10px;
}

.tariffsItem {
  padding-top: 30px;
  padding-left: 20px;
}

.radioItemTariff {
  min-width: 270px;
  width: calc(100% / 3);
  padding: 0 10px;
  margin-bottom: 20px;
}

.radioItemAutoStart {
  width: calc(100% / 2);
  padding: 0 10px;
}

.fieldHorizontal {
  display: flex;
}

.horizontalLabel {
  margin-top: 10px;
  margin-right: 30px;
  font: var(--mainFont);
  font-size: 15px;
  color: gray;
}
