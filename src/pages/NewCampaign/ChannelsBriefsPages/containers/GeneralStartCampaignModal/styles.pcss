.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80px 44px;
}

.description {
  max-width: 640px;
  white-space: pre-line;
}

.helpInfo {
  text-align: left;
  max-width: 600px;
  white-space: pre-wrap;
}

.buttonsContainer {
  display: flex;
  justify-content: space-between;
  margin-top: 60px;
}

.button {
  padding: 5px 15px;
  width: 270px;
  height: 48px;
}

.rightButton {
  margin-left: 70px;
}

.infoLoader {
  min-height: 100px;
}
