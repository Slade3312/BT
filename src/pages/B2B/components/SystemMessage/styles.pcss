@import "styles/constants.pcss";

.systemMessage {
  max-width: 80%;
  list-style-type: none;
  margin: 10px auto;
  padding: 12px;
  font-size: 14px;
  font-family: var(--mainFontFamily);
  text-align: center;
  border-radius: 15px;
  border: 1px solid rgba(40, 40, 40, 0.2);
}
.isErrorMessage {
  border: 1px solid rgba(220, 0, 0, 0.8);
}
