@import "styles/constants.pcss";

.container {
  margin-bottom: 50px;
  font-family: var(--mainFontFamily);
  font-size: 17px;
}

.inputWrapper {
  position: relative;
  display: flex;
  min-height: 185px;
  max-width: 1160px;
  padding: 19px 0 19px 19px;
  background-color: #d8d8d8;

  &.isValid {
    background-color: #c7e58f;
  }

  &.isInvalid {
    background-color: #ffa5a5;
  }

  &.isWarn {
    background-color: #ffd56f;
  }
}

.inputContainer {
  position: relative;
}

.input {
  width: 290px;
  margin-right: 191px;
}

.ruble {
  position: absolute;
  top: 11px;
  left: 260px;
  color: #939393;
}

.inputError {
  margin-top: 11px;
  width: 411px;
  font-family: "Officina Serif", serif;
  font-size: 21px;
  line-height: 27px;
  font-style: normal;
  color: #000;
}

.topInfoBlock {
  display: flex;
  justify-content: flex-start;
}

.priceInfo {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.infoNumber {
  font-size: 50px;
  line-height: 56px;
}

.countInfo {
  margin-left: 105px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.bottomInfoBlock {
  display: flex;
  justify-content: flex-start;
}

.infoIcon {
  width: 45px;
  height: 45px;
}

.infoText {
  width: 455px;
  font-size: 21px;
  line-height: 27px;
}

.audienceLink span {
  text-decoration: none;
  border-bottom: 1px dashed rgba(40, 40, 40, 0.5);
  transition: color 0.3s ease-out;
}

.audienceLink span:hover {
  border-bottom: 1px dashed #ffb612;
}
