@import "styles/constants.pcss";

.component {
  padding: 0 20px;
  padding-left: 60px;
  margin-left: 10px;
  white-space: nowrap;
  background: #ffdc7d;
  display: flex;
  align-items: center;
  font-family: var(--mainFontFamily), serif;
  font-size: 15px;
  cursor: pointer;

  &.opened {
    background: #fff;

    & .content {
      color: var(--mainColor);
    }
  }
}

.personalIcon {
  cursor: pointer;
  margin-right: 25px;
  height: 20px;
}
