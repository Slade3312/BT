.wrapper {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: -10px;
  width: 100%;
  max-height: 120px;
  overflow: hidden;
  transition: max-height 1s cubic-bezier(0, 0.55, 0.45, 1);

  &.isShowed {
    max-height: 800px;
    transition: max-height 2s cubic-bezier(0.11, 0, 0.5, 0);
  }
}

.buttonWrapper {
  width: 100%;
}

.tab {
  height: 30px;
  margin-bottom: 10px;

  &:not(:last-child) {
    margin-right: 14px;
  }
}
