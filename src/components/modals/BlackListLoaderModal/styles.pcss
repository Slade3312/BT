@keyframes rotating {
  from { transform: rotate(0); }
  to { transform: rotate(360deg); }
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100px 200px;
}

.description {
  max-width: 490px;
  margin-top: 30px;
  line-height: 1;
  white-space: pre-line;
}

.loaderIcon {
  animation: rotating 1s linear infinite;
}
