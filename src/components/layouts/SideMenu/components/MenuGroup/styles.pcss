@import "styles/constants.pcss";

.splitLine {
  margin: 0 15px;
}

.component {
  background: var(--contentLinerBgColor);

  & + & .splitLine {
    border-top: 1px solid rgba(40, 40, 40, 0.2);
  }

  &.active {
    & .splitLine {
      border-color: transparent;
    }

    &.compact + .component .splitLine {
      border-color: transparent;
    }
  }

  &:not(.compact) {
    padding-bottom: 20px;
  }

  &.last:not(.compact) {
    padding-bottom: 30px;
  }
}
