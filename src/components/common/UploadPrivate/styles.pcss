.inputFile {
    display: none;
}

.title {
    color: #787878;
    border-bottom: 1px solid;
    font-size: 14px;
    margin-left: 8px;
    cursor: pointer;
}

.description {
    font-size: 13px;
    color: #787878;
    font-style: italic;
    margin-left: 30px;
}

.row {
    display: flex;
    align-items: center;
    height: 40px;
}

.inputHolder {
    display: flex;
    flex-direction: column;
}

.error {
    display: flex;
    align-self: flex-end;
    color: red;
    font-style: italic;
}