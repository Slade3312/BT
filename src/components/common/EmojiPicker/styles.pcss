@import "styles/constants.pcss";

.title {
  padding: 0 5px;
  font-size: 13px;
  color: #999999;
  border-radius: 10px;
}

.group {
  margin-bottom: 10px;
}

.emojiContainer {
  display: flex;
  flex-flow: row wrap;
}

.emojiItem {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30px;
  height: 30px;
  font-size: 24px;
  cursor: pointer;

  &:hover {
    background: rgba(0, 0, 0, 0.1);
  }
}
