.component {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: auto;
  z-index: 12;
  background: rgba(193, 190, 185, 0.7);
  animation-name: background-opacity;
  animation-duration: 0.5s;
}

@keyframes background-opacity {
  0% {
    background: rgba(193, 190, 185, 0);
  }

  100% {
    background: rgba(193, 190, 185, 0.7);
  }
}
